   pipeline {
    agent any

    parameters {
    string(name: 'inventory', defaultValue: 'dev',  description: 'This is the inventory file for the environment to deploy configuration')
    string(name: 'tag', defaultValue: 'all',  description: 'Tags to run ansible playbook against')
  }

   environment {
    branch = 'main'
  }
  stages {

    stage('Initial Cleanup'){
      steps {
        dir("${WORKSPACE}"){
          deleteDir()
        }
      }
    }

    stage('SCM Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/Emmy-github-webdev/ansible-config.git'
      }
    }

    stage('Update ansible.cfg') {
      steps {
        sh "export ANSIBLE_CONFIG=${WORKSPACE}/deploy/ansible.cfg"
      }
    }

    stage('Run playbook') {
      steps {
        ansiblePlaybook(credentialsId: 'private-key', disableHostKeyChecking: true, installation: 'ansible2', inventory: 'inventory/${inventory}', playbook: 'playbooks/site.yml', tags: '${tag}')
      }
    }

    stage('Clean up') {
      steps {
        cleanWs(cleanWhenAborted: true, cleanWhenFailure: true, cleanWhenNotBuilt: true, cleanWhenUnstable: true, deleteDirs: true)
      }
    }
  }
}